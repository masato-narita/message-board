<!--メッセージボードの表題-->
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

<!--表示されるメッセージ一覧    -->
    <div class="panel-body">
        <% @messages.each do |message| %>
          <span class="label label-default"><%= message.name %></span>
          <%= message.body %>
          <br>
        <% end %>
    </div>
</div>

