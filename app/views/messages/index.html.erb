<!--メッセージボードの表題-->
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <!--表示されるメッセージ一覧    -->
  <div class="panel-body">
    <% @messages.each do |message| %>
        <!-- 名前と年齢を表示-->
      <span class="label label-default"><%= message.name %></span>
      <span class="label label-info"><%= message.age %></span>
      <%= message.body %>
      <!--メッセージの横に(edit)が出てくる-->
      (<%= link_to "edit" , edit_message_path(message) %>
      <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>)<br>
    <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>
