<!--メッセージボードの表題-->
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

<!--表示されるメッセージ一覧    -->
    <div class="panel-body">
        <% @messages.each do |message| %>
          <span class="label label-default"><%= message.name %></span>
          <%= message.body %>
          <br>
        <% end %>
    </div>
</div>

<!--入力フォーム-->
<%= form_for @message, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
      <%= f.text_field :name,  class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="message_body" class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>


<!--投稿ボタン-->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default btn-block pull-right form-control" %>  
    </div>
  </div>
<% end %>